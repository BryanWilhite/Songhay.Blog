{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "isBackground": true,
            "type": "shell",
            "args": [
                "build",
                "Songhay.Blog.sln"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "npm",
            "label": "npm: install",
            "isBackground": false,
            "type": "shell",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Songhay.Blog/ClientApp/"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "path": "Songhay.Blog/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "label": "build:ssr [Server-Side Rendering]",
            "type": "npm",
            "script": "build:ssr",
            "path": "Songhay.Blog/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "type": "npm",
            "script": "e2e",
            "path": "Songhay.Blog/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "type": "npm",
            "script": "start",
            "path": "Songhay.Blog/ClientApp/",
            "problemMatcher": [
                "$tslint5"
            ]
        }
    ]
}
